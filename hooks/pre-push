#!/bin/sh

cmd=`git rev-parse --abbrev-ref HEAD`
branch=${cmd}

if [ $branch == 'master' ]
then
echo '------------------------'
echo '--- Updating docs... ---'
git stash
git checkout gh-pages
git merge master
elm make src/Main.elm --output elm.js
git add src/ elm.js
git commit -m 'Rebuild gh pages'
git push origin gh-pages
git checkout master
git stash apply
echo '--- Updating docs complete! ---'
echo '-------------------------------'
fi
